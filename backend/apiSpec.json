{
  "openapi": "3.0.0",
  "info": {
    "title": "User API",
    "description": "Simple RESTful API in Node.js with TypeScript",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local server"
    }
  ],
  "paths": {
    "/login": {
      "get": {
        "summary": "Return all users with list.",
        "description": "Return all existed users.",
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/login"
                  }
                },
                "examples": {
                  "Successful": {
                    "success": true,
                    "error": null,
                    "errorType": null,
                    "result": {
                      "properties": {
                        "refreshToken": {
                          "type": "string",
                          "example": "mOAl9jp5JFoIcqtT"
                        },
                        "accessToken": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiJ9.eyJSb2xlIjoiQWRtaW4iLCJJc3N1ZXIiOiJJc3N1ZXIiLCJVc2VybmFtZSI6IkphdmFJblVzZSIsImV4cCI6MTY1MTk0MTIzMSwiaWF0IjoxNjUxOTQxMjMxfQ.wfjcS5lplDRE2OO0sdKENvNxHWKKQpojHEctnx_ZwHM"
                        }
                      }
                    }
                  },
                  "Unsuccessful": {
                    "success": false,
                    "error": "Unauthorized Action",
                    "errorType": "UnauthorizationError",
                    "result": null
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Return all users with list.",
        "description": "Return all existed users.",
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "login": {
        "properties": {
          "success": {
            "type": "boolean"
          },
          "error": {
            "type": "string"
          },
          "errorType": {
            "type": "string"
          },
          "result": {
            "type": "object",
            "properties": {
              "refreshToken": {
                "type": "string",
                "example": "mOAl9jp5JFoIcqtT"
              },
              "accessToken": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiJ9.eyJSb2xlIjoiQWRtaW4iLCJJc3N1ZXIiOiJJc3N1ZXIiLCJVc2VybmFtZSI6IkphdmFJblVzZSIsImV4cCI6MTY1MTk0MTIzMSwiaWF0IjoxNjUxOTQxMjMxfQ.wfjcS5lplDRE2OO0sdKENvNxHWKKQpojHEctnx_ZwHM"
              }
            }
          }
        },
        "required": ["id", "username", "email"]
      }
    }
  }
}
